{
    "packages": [
        "packages/*",
        "./"
    ],
    "command": {
        "bootstrap": {
            "npmClientArgs": [
                "--no-package-lock"
            ]
        },
        "exec": {
            "ignore": [
                "lerna-ts"
            ]
        },
        "run": {
            "ignore": [
                "lerna-ts"
            ]
        },
        "version": {
            "ignoreChanges": [
                "**/package-lock.json"
            ]
        }
    },
    "version": "independent"
}