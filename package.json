{
    "name": "lerna-ts",
    "version": "0.0.0",
    "description": "",
    "main": "app.js",
    "scripts": {
        "init": "npm i && npm run clean:deps && npx lerna bootstrap",
        "tsc:watch": "npx lerna run tsc:clean && npx lerna run --stream tsc:watch",
        "start": "npx lerna run --stream clean && npx lerna run --stream build:dll && npx lerna run --stream run:server",
        "clean:deps": "npx lerna exec 'rm -rf node_modules && rm -rf package-lock.json'",
        "tsc:clean": "npx lerna run tsc:clean",
        "build": "npx lerna run --stream clean && npx lerna run --stream build && npm run copy",
        "copy": "./scripts/init-build-folder.sh && npx lerna run --stream copy",
        "prod": "node ./dist/server/index.js",
        "release": "CI=true npx lerna version --conventional-commits --include-merged-tags --yes"
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": "./scripts/prepare-commit-msg.sh"
        }
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "compression": "^1.7.4",
        "express": "^4.17.1",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-redux": "^7.1.3",
        "react-router": "^5.1.2",
        "react-router-dom": "^5.1.2",
        "redux": "^4.0.5"
    },
    "devDependencies": {
        "@hot-loader/react-dom": "^16.11.0",
        "@types/compression": "^1.0.1",
        "@types/express": "^4.17.2",
        "@types/glob": "^7.1.1",
        "@types/hard-source-webpack-plugin": "^1.0.1",
        "@types/mini-css-extract-plugin": "^0.9.0",
        "@types/optimize-css-assets-webpack-plugin": "^5.0.1",
        "@types/react": "^16.9.13",
        "@types/react-dom": "^16.9.4",
        "@types/react-hot-loader": "^4.1.1",
        "@types/react-redux": "^7.1.6",
        "@types/react-router": "^5.1.3",
        "@types/react-router-dom": "^5.1.3",
        "@types/terser-webpack-plugin": "^2.2.0",
        "@types/watchpack": "^1.1.5",
        "@types/webpack": "^4.41.0",
        "@types/webpack-dev-middleware": "^2.0.3",
        "@types/webpack-hot-middleware": "^2.25.0",
        "@types/webpack-manifest-plugin": "^2.1.0",
        "@types/webpack-node-externals": "^1.7.0",
        "commitizen": "^4.1.2",
        "css-loader": "^3.4.2",
        "cz-lerna-changelog": "^2.0.3",
