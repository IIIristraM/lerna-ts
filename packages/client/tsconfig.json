{
    "extends": "../tsconfig/tsconfig.json",
    "references": [
        {
            "path": "../common/tsconfig.json"
        }
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "tsBuildInfoFile": "./node_modules/.cache/tsconfig.tsbuildinfo",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "lib": [
            "ES2015",
            "DOM"
        ],
        "types": [
            "utils",
            "node",
            "react",
            "react-router",
            "react-router-dom"
        ],
        "paths": {
            "@project/common/*": [
                "../common/src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}