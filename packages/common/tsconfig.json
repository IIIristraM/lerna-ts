{
    "extends": "../tsconfig/tsconfig.json",
    "references": [
        {
            "path": "../tools/tsconfig.json",
        }
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "build",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "tsBuildInfoFile": "./node_modules/.cache/tsconfig.tsbuildinfo",
        "types": [
            "utils",
            "css",
            "node",
            "client",
            "redux-saga"
        ],
        "lib": [
            "ES2015",
            "DOM"
        ],
        "paths": {
            "@project/tools/*": [
                "../tools/src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}