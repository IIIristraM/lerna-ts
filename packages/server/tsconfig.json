{
    "extends": "../tsconfig/tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "build",
        "baseUrl": ".",
        "paths": {
            "@project/tools/*": [
                "../tools/src/*"
            ],
            "@project/common/*": [
                "../common/src/*"
            ],
            "@project/client/*": [
                "../client/src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}