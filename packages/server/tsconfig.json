{
    "extends": "../tsconfig/tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "build",
        "baseUrl": ".",
        "types": [
            "node",
            "webpack",
            "react",
            "react-router",
            "react-router-dom",
            "utils",
            "css"
        ],
        "paths": {
            "@project/common/*": [
                "../common/src/*"
            ],
            "@project/client/*": [
                "../client/src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}